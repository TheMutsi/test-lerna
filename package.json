{
  "name": "test-leona",
  "version": "0.0.21",
  "private": true,
  "author": {
    "name": "themutsi",
    "email": "damian.mussi@embrace.io"
  },
  "homepage": "https://google.com",
  "description": "A React Native wrapper for Embrace SDK",
  "main": "dist/src/embrace.js",
  "types": "dist/src/embrace.d.ts",
  "files": [
    "/dist",
    "/android",
    "/ios",
    "RNEmbrace.podspec",
    "react-native.config.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:TheMutsi/test-lerna.git"
  },
  "scripts": {
    "build:watch": "tsc -w --preserveWatchOutput",
    "lint": "tslint --fix -c tslint.json -p tsconfig.json",
    "prebuild": "npm run lint && rm -rf dist",
    "build": "tsc",
    "preversion": "npm run lint && npm run build",
    "version": "git add -A",
    "postversion": "git push && git push --tags",
    "test": "jest",
    "docs": "typedoc --options typedoc.json --inputFiles ./src/embrace.ts && touch ./docs/.nojekyll && git add docs"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn docs && lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "license": "ISC",
  "keywords": [
    "react-native",
    "react-component",
    "tracking",
    "embrace",
    "bug tracker"
  ],
  "peerDependencies": {
    "react-native": ">=0.56.0"
  },
  "dependencies": {
    "@types/node": "^12.7.2",
    "@types/semver": "^7.1.0",
    "glob": "^7.1.4",
    "gzip-js": "^0.3.2",
    "inquirer": "^6.5.1",
    "lerna": "^6.0.3",
    "promise": "^8.0.3",
    "semver": "^7.1.3",
    "xcode": "^2.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.9.0",
    "@babel/preset-env": "^7.9.5",
    "@types/gzip-js": "^0.3.3",
    "@types/jest": "^28.1.7",
    "@types/react-native": "^0.60.2",
    "babel-jest": "^25.3.0",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-native": "^0.56.0",
    "react-test-renderer": "^18.2.0",
    "ts-jest": "^25.3.1",
    "tslint": "^5.18.0",
    "typedoc": "^0.17.8",
    "typescript": "^4.7.4"
  },
  "rnpm": {
    "commands": {
      "postlink": "node node_modules/react-native-embrace/dist/scripts/postlink",
      "postunlink": "node node_modules/react-native-embrace/dist/scripts/postunlink"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "bugs": {
    "url": "https://github.com/monatheoctocat/my_package/issues"
  }
}
